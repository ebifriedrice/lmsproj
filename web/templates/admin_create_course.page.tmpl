{{template "base" .}}

{{define "title"}}Admin: Create Course{{end}}

{{define "nav"}}
    {{template "nav" .}}
{{end}}

{{define "main"}}
    <h1 class="text-2xl font-bold text-blue">Create a New Course</h1>
    <div class="card mt-4">
        <form action="/admin/courses/new" method="post">
            <div class="mt-4">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required class="w-full p-2 border border-gray rounded">
            </div>
            <div class="mt-4">
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" class="w-full p-2 border border-gray rounded"></textarea>
            </div>
            <div class="mt-8">
                <button type="submit" class="btn btn-blue">Create Course</button>
            </div>
        </form>
    </div>
{{end}}
