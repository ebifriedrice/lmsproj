{{template "base" .}}

{{define "title"}}Dashboard{{end}}

{{define "nav"}}
    {{template "nav" .}}
{{end}}

{{define "main"}}
    {{if .IsAuthenticated}}
        <h1 class="text-2xl font-bold text-blue">My Courses</h1>
    {{else}}
        <h1 class="text-2xl font-bold text-blue">Available Courses</h1>
    {{end}}

    {{if .Data.Courses}}
        <div class="mt-4">
            {{range .Data.Courses}}
                <div class="card mt-4">
                    <h2 class="text-xl font-bold text-blue">{{.Title}}</h2>
                    <p class="mt-2">{{.Description}}</p>
                    <div class="mt-4">
                        <a href="/courses/{{.ID}}" class="btn btn-orange">View Course</a>
                    </div>
                </div>
            {{end}}
        </div>
    {{else}}
        {{if .IsAuthenticated}}
            <p class="mt-4">You are not enrolled in any courses yet.</p>
        {{else}}
            <p class="mt-4">There are no courses available at the moment. Please check back later.</p>
        {{end}}
    {{end}}
{{end}}
